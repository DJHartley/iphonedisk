#include <mach/std_types.defs>
import "proto_rpc_types.h";

subsystem proto_rpc 1000;

type string_t = array[] of char;

routine call_method(
  server_port: mach_port_t;
  // string descriptor names
  in service_name : string_t;
  in method_name : string_t;
  // request and response are serialized protocol messages
  in request_bytes : string_t;
  // Non-zero return code indicates a failure
  out status : int32_t;
  out response_bytes : string_t
);
