Import('env')
env = env.Clone()
Import('proto')
Import('rpc_channel')

env.Append(CPPFLAGS = '-D_FILE_OFFSET_BITS=64 -D__FreeBSD__=10 -DFUSE_USE_VERSION=26')

fs = env.Object('fs.cc')
Depends(fs, proto)
mount_server = env.Program('fs_server',
            [ 'fs.o',
              'mount_server.cc' ],
            LIBS = [ proto, rpc_channel, 'protobuf', 'fuse' ])
